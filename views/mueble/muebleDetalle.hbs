
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Muebles</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Muebles</a></li>
              <li class="breadcrumb-item active">Detalle</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        <div class="card card-solid">
        <div class="card-body">
          <div class="row">
            <div class="col-12 col-sm-6">
              <div class="col-12">
                <img src="/img/{{mueble.imagen}}" class="product-image" alt="Product Image">
              </div>
              
            </div>
            <div class="col-12 col-sm-6">
              <h3 class="my-3">{{mueble.tipo}}</h3>
              <p>{{mueble.descripcion}}.</p>

              <hr>

              <h4 class="mt-3">Dimensiones </h4>
              <ul class="list-group list-group-horizontal">
                <li class="list-group-item">
                    <span class="text-xl">{{mueble.altura}}cm</span>
                    <br>
                    <strong>Altura</strong>
                </li>
                <li class="list-group-item">
                    <span class="text-xl">{{mueble.ancho}}cm</span>
                    <br>
                    <strong>Ancho</strong>
                </li>
                <li class="list-group-item">
                    <span class="text-xl">{{mueble.largo}}cm</span>
                    <br>
                    <strong>Largo</strong>
                </li>
              </ul>
              <h6 class="mt-3">Material: {{mueble.material}} </h6>

              <hr>
              <h4 class="mt-3">{{mueble.categoria}}</h4>
              
              <div class="row align-items-center">
                <div class="col-6">
                    <div class="bg-green py-2 px-3 mt-4">
                        <h2 class="mb-0">
                            S/. {{mueble.precio}}
                        </h2>                
                    </div>
                </div>
                <div class="col-6">                    
                    <button type="button" class="btn btn-block bg-gradient-warning">
                      <i class="fas fa-cart-plus fa-lg mr-2"></i>
                        Agregar
                    </button>
                </div>
              </div>

            </div>
          </div>
          
        </div>
        <!-- /.card-body -->
      </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

 