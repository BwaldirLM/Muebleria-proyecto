
<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Muebles</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Muebles</a></li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- Item mueble lista -->
      {{#each muebles}}
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card card-solid">
          <div class="card-body">
            <div class="col-12">
                <img src="data:{{mimeType}};base64,{{imagen}}" class="product-image" alt="Product Image">
            </div>
            <p><strong>{{descripcion}}</strong></p>
            <span>{{categoria}}</span>
            <p class="h3">S/. {{precio}}</p>

            <a href="mueble/detalle/{{id}}" class="btn btn-block btn-info btn-lg">Detalles</a>
          </div>
        </div>            
      </div>
      {{/each}}
      
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content -->